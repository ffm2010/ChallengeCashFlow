@model IEnumerable<FinancialChallenge.Web.Models.TransactionDto>

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Daily Cash Flow</h1>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="col text-end pt-1">
                <a asp-action="TransactionCreate" class="btn btn-outline-primary"><i class="fa fa-plus"></i> Create New Transaction</a>
            </div>
        }
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Transaction Type</th>
                <th>Description</th>
                <th>TypePayment</th>
                <th>Amount Parcels</th>
                <th>Total</th>
                <th>TransactionDate</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TransactionType</td>
                    <td>@item.Description</td>
                    <td>@item.TypePayment</td>
                    <td>@item.AmountParcels</td>
                    <td>@((item.Total).ToString("c"))</td>
                    <td>@item.TransactionDate.ToString("d")</td>
                    <td>
                        <a asp-action="TransactionEdit" class="btn btn-success" asp-route-transactionId="@item.TransactionId">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a asp-action="TransactionDelete" class="btn btn-danger" asp-route-transactionId="@item.TransactionId">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <div class="col-10"> <b>Total Cash Flow: @((ViewBag.TotalCashFlow).ToString("c"))</b> </div>
</div>